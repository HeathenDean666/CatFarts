<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.heathendean.catfarts.settings.Settings$PlaceholderFragment">

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical" >

			<ImageButton
				android:id="@+id/imageButton1"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:scaleType="fitXY"
				android:background="@null"
				android:backgroundTint="@null"
				android:contentDescription="@string/settings_imageButton_01_contentDescription"
				android:onClick="instructions_menu"
				android:src="@drawable/instruction_button"/>

			<ImageButton
				android:id="@+id/imageButton2"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:scaleType="fitXY"
				android:background="@null"
				android:backgroundTint="@null"
				android:contentDescription="@string/settings_imageButton_01_contentDescription"
				android:onClick="sound_menu"
				android:src="@drawable/sound_button"/>

			<ImageButton
				android:id="@+id/imageButton3"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:scaleType="fitXY"
				android:background="@null"
				android:backgroundTint="@null"
				android:contentDescription="@string/settings_imageButton_01_contentDescription"
				android:onClick="pictures_menu"
				android:src="@drawable/picture_button"/>

			<ImageButton
				android:id="@+id/imageButton4"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:scaleType="fitXY"
				android:background="@null"
				android:backgroundTint="@null"
				android:contentDescription="@string/settings_imageButton_01_contentDescription"
				android:onClick="gameplay_menu"
				android:src="@drawable/gameplay_button"/>

			<ImageButton
				android:id="@+id/imageButton5"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:scaleType="fitXY"
				android:background="@null"
				android:backgroundTint="@null"
				android:contentDescription="@string/settings_imageButton_01_contentDescription"
				android:onClick="options_menu"
				android:src="@drawable/option_button"/>

			<ImageButton
				android:id="@+id/imageButton6"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:scaleType="fitXY"
				android:background="@null"
				android:backgroundTint="@null"
				android:contentDescription="@string/settings_imageButton_01_contentDescription"
				android:onClick="networking_menu"
				android:src="@drawable/networking_button"/>

			<ImageButton
				android:id="@+id/imageButton7"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:scaleType="fitXY"
				android:background="@null"
				android:backgroundTint="@null"
				android:contentDescription="@string/settings_imageButton_01_contentDescription"
				android:onClick="cheats_menu"
				android:src="@drawable/cheatcodes_button"/>

			<ImageButton
				android:id="@+id/imageButton8"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:scaleType="fitXY"
				android:background="@null"
				android:backgroundTint="@null"
				android:contentDescription="@string/settings_imageButton_01_contentDescription"
				android:onClick="contact_menu"
				android:src="@drawable/contact_button2"/>

			<ImageButton
				android:id="@+id/imageButton9"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:scaleType="fitXY"
				android:background="@null"
				android:backgroundTint="@null"
				android:contentDescription="@string/settings_imageButton_01_contentDescription"
				android:onClick="lore_menu"
				android:src="@drawable/lore_button"/>

			<ImageButton
				android:id="@+id/imageButton10"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:scaleType="fitXY"
				android:background="@null"
				android:backgroundTint="@null"
				android:contentDescription="@string/settings_imageButton_01_contentDescription"
				android:src="@drawable/blank_option_button"/>

			<ImageButton
				android:id="@+id/imageButton11"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:scaleType="fitXY"
				android:background="@null"
				android:backgroundTint="@null"
				android:contentDescription="@string/settings_imageButton_01_contentDescription"
				android:src="@drawable/blank_option_button"/>

			<ImageButton
				android:id="@+id/imageButton12"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:scaleType="fitXY"
				android:background="@null"
				android:backgroundTint="@null"
				android:contentDescription="@string/settings_imageButton_01_contentDescription"
				android:src="@drawable/blank_option_button"/>

			<ImageButton
				android:id="@+id/imageButton13"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:scaleType="fitXY"
				android:background="@null"
				android:backgroundTint="@null"
				android:contentDescription="@string/settings_imageButton_01_contentDescription"
				android:src="@drawable/blank_option_button"/>
		</LinearLayout>
	</ScrollView>

	<com.heathendean.catfarts.custom.customImageButton
		android:id="@+id/backHomeFromSettings"
		android:layout_width="200dp"
		android:layout_height="200dp"
		android:layout_alignParentBottom="true"
		android:adjustViewBounds="false"
		android:background="@drawable/back_triangle"
		android:onClick="back_to_main"
		android:contentDescription="@string/desc"/>

</RelativeLayout>
