<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.heathendean.catfarts.MainActivity$PlaceholderFragment"

    android:id="@+id/mainLayoutContainer01"
    android:orientation="vertical"
    android:background="@color/black"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.65">
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:contentDescription="@string/desc"
            android:src="@drawable/fartron" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.35"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:gravity="bottom">
            <com.heathendean.catfarts.custom.customImageButton
                android:id="@+id/backHomeFromStartGame"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="200dp"
                android:adjustViewBounds="false"
                android:background="@drawable/back_triangle"
                android:onClick="back_to_main"
                android:contentDescription="@string/desc"/>
            <com.heathendean.catfarts.custom.customImageButton
                android:id="@+id/newCat"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="200dp"
                android:adjustViewBounds="false"
                android:background="@drawable/new_cat_triangle"
                android:onClick="new_cat"
                android:contentDescription="@string/desc"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>